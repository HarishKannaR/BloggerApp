<%= form_for([@blog_post, @blog_post.comments.build], html: {class: "form-inline", role: "form"}) do |f| %>
    <% if current_user.present? %>
      <%= f.hidden_field :user_id, value: current_user.id %>
    <% end %>
    <div class="form-group">
      <%= f.text_field :message, placeholder: "Your comments", wrapper: false, class: 'form-control'  %>
    </div>
    <div class="form-group" style="margin-left: 5px;">
      <%= f.submit class: "btn btn-success btn-large" %>
    </div>
<% end %>
