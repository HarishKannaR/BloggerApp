<div class="container">
  <div class="row">
    <div class="col-lg-10 col-xl-9 mx-auto">
      <div class="card card-signin flex-row my-5">
        <div class="card-img-left d-none d-md-flex">
           <!-- Background image for card set in CSS! -->
        </div>
        <div class="card-body">
          <h5 class="card-title text-center">Register</h5>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-signin", role: "form", method: :put) do |f| %>
            <div class="form-label-group">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", placeholder: "First Name", required: true %>
            </div>

            <div class="form-label-group">
               <%= f.label :last_name %>
               <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control", placeholder: "Last Name", required: true %>
            </div>

            <div class="form-label-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
            </div>
            
            <hr>

            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>

            <i>(leave blank if you don't want to change it)</i>
            <div class="form-label-group">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-label-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <i>(we need your current password to confirm your changes)</i>
            <div class="form-label-group">
              <%= f.label :current_password %>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <div>
              <%= f.submit "Update", class: "btn btn-lg btn-primary btn-block" %>
            </div>

            <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "d-block text-center mt-2 small" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
